<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comentarios">


    <!-- Agrega el RecyclerView aquÃ­ -->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="494dp"
        android:layout_height="52dp"
        android:layout_marginBottom="4dp"
        app:itemIconSize="25dp"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menuprincipal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comentarios"
        android:layout_width="453dp"
        android:layout_height="516dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685" />

    <TextView
        android:id="@+id/reacciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="45dp"
        android:text="Reacciones"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/comentarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atras"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/atras"
        android:layout_width="520dp"
        android:layout_height="40dp"
        android:backgroundTint="#EFEBEB"
        android:drawableTint="#0C0C0C"
        app:icon="@drawable/baseline_west_24"
        app:iconTint="#050505"
        app:layout_constraintBottom_toTopOf="@+id/comentarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/image7"
        android:layout_width="67dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="74dp"
        app:layout_constraintBottom_toTopOf="@+id/comentarios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user1" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="69dp"
        android:layout_height="57dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="73dp"
        app:layout_constraintBottom_toTopOf="@+id/comentarios"
        app:layout_constraintStart_toEndOf="@+id/image7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496"
        app:srcCompat="@drawable/user3" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="69dp"
        android:layout_height="57dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="73dp"
        app:layout_constraintBottom_toTopOf="@+id/comentarios"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user4" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="76dp"
        android:layout_height="56dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="74dp"
        app:layout_constraintBottom_toTopOf="@+id/comentarios"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user3" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="77dp"
        android:layout_height="56dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="71dp"
        app:layout_constraintBottom_toTopOf="@+id/comentarios"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493"
        app:srcCompat="@drawable/user1" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="73dp"
        android:layout_height="56dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="74dp"
        app:layout_constraintBottom_toTopOf="@+id/comentarios"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user3" />

    <TextView
        android:id="@+id/comentarioTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="Comentarios"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/comentarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>